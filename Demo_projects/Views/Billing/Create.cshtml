@model Demo_projects.Models.Billing

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Bill</h1>
                </div>
                <div class="card-body">
                    <form method="post" action="Create">
                        <div class="form-group mt-3">
                            @Html.LabelFor(model => Model.CustomertNo, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.CustomertNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CustomertNo, "", new { @class = "text-danger" })
                        </div>                                               
                        <div class="form-group">
                            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Pay Now" style="color: white;" class="btn btn-sm btn-outline-success float-end bg-success" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
